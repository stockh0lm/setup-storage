# .alias fuer informatik
eval `dircolors`

alias	ls	'ls --color=auto -F'
alias   le      less

alias e		"emacs \!:* &"
alias en	"emacs -nw \!:*"
alias vok	"grep -ih \!* /usr/local/lib/Vokabeln/*"
alias lt	"ls --color -ltrF"
alias dl	"ls --color -alFG |less -r"
alias d		"ls --color -lFG"
alias up	"cd .."
alias +w	"chmod u+w"
alias -w	"chmod a-w"
alias +x	"chmod a+x"
alias xr	"xrlogin \!:* &"
alias nfind	"find -name"
alias gz	"gs $Z"
