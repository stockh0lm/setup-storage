disk_config hda
primary /boot     20        rw                  ext3
primary swap      1000     sw         swap
primary /         12000      rw                  ext3
logical /tmp      1000      rw,nosuid		ext3
logical /usr      15000      rw                  ext3
logical /var      preserve7      rw                  ext3
logical /nobackup 0-	rw                   ext3
