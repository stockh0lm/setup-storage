#! /bin/sh

# $Id $
#*********************************************************************
# postinst -- setup fai
#
# This script is part of FAI (Fully Automatic Installation)
# Copyright (c) 2000 by Thomas Lange, Universitaet zu Koeln
#*********************************************************************
#
# see: dh_installdeb(1)

set -evx

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see /usr/doc/packaging-manual/
#
# quoting from the policy:
#     Any necessary prompting should almost always be confined to the
#     post-installation script, and should be protected with a conditional
#     so that unnecessary prompting doesn't happen if a package's
#     installation fails and the `postinst' is called with `abort-upgrade',
#     `abort-remove' or `abort-deconfigure'.

faiuser=fai
test -f /etc/init.d/nfs-server && nfsserver=nfs-server
test -f /etc/init.d/nfs-kernel-server && nfsserver=nfs-kernel-server

add_export_line() {

# add line to /etc/exports

    pattern=$1
    shift
    options=$*

    grep -q "^$pattern[[:space:]]" /etc/exports && return
    echo "$pattern $options" >> /etc/exports
    /etc/init.d/$nfsserver reload
}

case "$1" in
    configure)

if id $faiuser 2>/dev/null 1>&2 ; then
    echo account $faiuser already exists.
    echo I hope you set up account $faiuser correctly.
    echo For more inforamtiion, read the manuals.
else
    adduser --system --disabled-password --gecos "fai account for log files" $faiuser || true
    gid=`id -g $faiuser`
    perl -pi.bak -e "s#^$faiuser:(.+):/bin/false#$faiuser:\1:/bin/bash#" /etc/passwd
    echo "+@faiclients root" > /home/$faiuser/.rhosts
    chown $faiuser:$gid /home/$faiuser/.rhosts
    chmod go-rwx /home/$faiuser/.rhosts
    # todo: write to fai.conf: faiuser_remove=yes
fi

[ ! -d /usr/lib/fai/nfsroot/fai ] && make-fai-nfsroot

add_export_line /usr/local/share/fai  "@faiclients(ro)"
add_export_line /usr/lib/fai/nfsroot  "@faiclients(ro,no_root_squash)"
add_export_line /usr  "@faiclients(ro,no_root_squash)"

if [ ! -d /usr/local/share/fai/fai_config ];then
    echo "I think you have no fai configuration."
    echo "You can copy fai template files with:"
    echo "cp -pR /usr/share/doc/fai/templates/* /usr/local/share/fai"
    echo "Then change the configuration files to meet your local needs."
fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


