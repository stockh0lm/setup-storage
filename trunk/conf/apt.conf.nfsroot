// This file is used by make-fai-nfsroot

Dir 
{
  // Location of the state dir
  State "/usr/lib/fai/nfsroot/var/state/apt/" 
  {
     status "/usr/lib/fai/nfsroot/var/lib/dpkg/status";
  };
  
  Cache "/usr/lib/fai/nfsroot/var/cache/apt/" {
  };
  
};

DPkg 
{
  Options {"--root=/usr/lib/fai/nfsroot";}
}

// If you want to use an other sources.list, change it here
// Directory layout
Dir 
{
  // Config files
  Etc "/usr/lib/fai/nfsroot/etc/apt" {
     sourcelist "sources.list";
  };
};
